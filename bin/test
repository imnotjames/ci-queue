#!/usr/bin/env ruby

def run(*args)
  puts "$ #{args.join(' ')}"
  unless system(*args)
    exit $?.exitstatus
  end
end

case ENV['SUITE']
when 'python'
  Dir.chdir('python/') do
    run({ 'PYTHONPATH' => '.' }, 'make', 'test')
  end
when 'ruby'
  Dir.chdir('ruby/') do
    run('bundle', 'exec', 'rake')
  end
else
  abort("Missing or invalid SUITE environment variable")
end
